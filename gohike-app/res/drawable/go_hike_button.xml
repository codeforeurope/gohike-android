<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/light_blue_pressed"></solid>

            <stroke android:width="1dp" android:color="@color/white"></stroke>

            <corners android:radius="6dp" />
        </shape></item>
    <item android:state_pressed="false">
        
        <shape>
            <solid android:color="@color/light_blue"></solid>

            <stroke android:width="1dp" android:color="@color/black"></stroke>

            <corners android:radius="6dp" />
        </shape>
        
    </item>

</selector>