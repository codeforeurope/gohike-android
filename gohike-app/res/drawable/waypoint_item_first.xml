<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="-90" android:centerColor="@color/gray_gradient_center" android:endColor="@color/gray_gradient_end" android:startColor="@color/gray_gradient_start" />

            <corners android:topLeftRadius="6dp" android:topRightRadius="6dp" />

            <stroke android:width="1px" android:color="@color/gray_frame"></stroke>
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@color/white"></solid>

            <corners android:topLeftRadius="6dp" android:topRightRadius="6dp" />

            <stroke android:width="1px" android:color="@color/gray_frame"></stroke>

<!--             <padding android:bottom="1px" android:left="0dp" android:right="0dp" android:top="0dp" /> -->
        </shape></item>

</selector>