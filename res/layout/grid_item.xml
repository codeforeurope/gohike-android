<?xml version="1.0" encoding="utf-8"?>
<net.codeforeurope.amsterdam.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:background="@drawable/grid_item"
    android:gravity="center" >

    <TextView
        android:id="@+id/grid_item_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/grid_item_top"
        android:gravity="center"
        android:text="test"
        android:textColor="@color/white"
        android:textIsSelectable="false" />

    <!-- </RelativeLayout> -->

    <TextView
        android:id="@+id/grid_item_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/grid_item_bottom"
        android:gravity="center"
        android:text="test2"
        android:textColor="@color/white"
        android:textIsSelectable="false" />

</net.codeforeurope.amsterdam.view.SquareRelativeLayout>